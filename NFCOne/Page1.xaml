<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFCOne.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblTagEnunciadoII"
                   Text="La ID de tu TAG es: "
                   FontAttributes="Bold" />

            <Label x:Name="lblTagIdHexII"
                   FontAttributes="Bold"
                   TextColor="Red" />

            <Entry x:Name="txtNombre" Placeholder="Ingrese su nombre"/>

            <Button x:Name="btnEviarRegistro"
                    Text="Registrar" 
                    BorderWidth="1"
                    HorizontalOptions="Center"
                    Clicked="btnEviarRegistro_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
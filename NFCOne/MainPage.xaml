<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFCOne.MainPage">

    <StackLayout>
        <Label x:Name="lblTagEnunciado"
               Text="La ID de tu TAG es: "
               FontAttributes="Bold" />

        <Label x:Name="lblTagIdHex"
               Text="Esperando detección del NFC..."
               FontAttributes="Bold"
               TextColor="Red" />

        <Label x:Name="lblUsuario" />



        <Image x:Name="imgNFC"
               Source="https://play-lh.googleusercontent.com/4kxHjDR4qOsolrqcE72xPxC_wEL845F1D3F8xpLVu87UJzq7OrH7VvMxMl9GjceMADo"
               Aspect="AspectFit"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
        
        <Label x:Name="lblIndicadorTAG" 
               Text="Ingresa tu TAG para iniciar sesion" 
               FontAttributes="Bold"/>
    </StackLayout>

</ContentPage>
